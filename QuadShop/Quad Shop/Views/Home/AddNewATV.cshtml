                    </tr>
                    <tr class="productediting_table_light_line">
                        <td>Turn Signals:</td>
                        <td>@Html.EditorFor(model => model.Turn_Signal, new { htmlAttributes = new { Placeholder = "Turn Signals", @class = "productediting_edit_editorfor" } })</td>
                    </tr>
                    <tr class="productediting_table_dark_line">
                        <td>Horn:</td>
                        <td>@Html.EditorFor(model => model.Horn, new { htmlAttributes = new { Placeholder = "Horn", @class = "productediting_edit_editorfor" } })</td>
                    </tr>
                    <tr class="productediting_table_light_line">
                        <td>Cargo Rocks:</td>
                        <td>@Html.EditorFor(model => model.Cargo_Rocks, new { htmlAttributes = new { Placeholder = "Cargo Rocks", @class = "productediting_edit_editorfor" } })</td>
                    </tr>
                    <tr class="productediting_table_dark_line">
                        <td>Color:</td>
                        <td>@Html.EditorFor(model => model.Color, new { htmlAttributes = new { Placeholder = "Color", @class = "productediting_edit_editorfor" } })</td>
                    </tr>
                    <tr class="productediting_table_light_line">
                        <td>Warranty:</td>
                        <td>@Html.EditorFor(model => model.Warranty, new { htmlAttributes = new { Placeholder = "Warranty", @class = "productediting_edit_editorfor" } }) month</td>
                    </tr>
                </table>
            </div>
            <script src="~/Scripts/edit.js" type="text/javascript"></script>
            <div class="productediting_specification_button">
                @Html.ActionLink("Cancel", "EditList", "Home", null, new { @class = "productediting_cancel_button" })
                <input class="productediting_submit_button" type="submit" value="Save" />
            </div>
        </div>
    </div>
}

